@model IEnumerable<WebAppRestaurant.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Menu</h2>

<div class="panel-group" id="menu">

    @foreach (var category in Model) {

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a data-toggle="collapse" data-parent="#menu" href="#collapse@(category.Id)">
                        @Html.DisplayFor(modelItem => category.Name)
                    </a>
                </h3>
            </div>
            <div id="collapse@(category.Id)" class="panel-collapse collapse in">
                <div class="panel-body">
                    @foreach (var menuItem in category.MenuItems) {
                        <h4>
                            @Html.DisplayFor(modelItem => menuItem.Name)
                        </h4>
                        <p>
                            @Html.DisplayFor(modelItem => menuItem.Description)
                        </p>
                        <p>
                            <strong>@Html.DisplayFor(modelItem => menuItem.Price)</strong>
                        </p>
                    }
                </div>
            </div>
        </div>

    }

</div>
